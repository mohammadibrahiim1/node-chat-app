    <title>Login</title>
    <link rel="shortcut icon" href="../publics/images/favicon.png" />
    <link rel="stylesheet" href="../publics/stylesheets/toastify.css" />
    <link rel="stylesheet" href="../publics/stylesheets/style.css" />
  </head>
  <body>
    <div class="menu">
      <div class="menu-item"><a href="/inbox">Inbox</a></div>
      <div class="menu-item"><a href="/users">Users</a></div>
      <div class="menu-item"><a href="/">Login</a></div>
    </div>

    <div id="login-container">
      <div id="left-column"></div>
      <div id="branding">
        <img src="./images/logo.png" />
        <h1>Login - Chat Application</h1>
      </div>
      <div id="login-form">
        <form method="post" action="/">
          <input
            type="text"
            name="username"
            placeholder="enter mobile or email"
            value=""
          />
          <p class="error show">Error message here</p>
          <input type="password" name="password" placeholder="enter password" />
          <input type="submit" value="Login" />
        </form>
      </div>
    </div>
    <script src="../publics/js/toastify.js"></script>
  </body>
